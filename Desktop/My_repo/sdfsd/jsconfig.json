{
	"compilerOptions": {
		"module": "esnext",
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@services/*": ["services/*"],
			"@pages/*": ["pages/*"],
			"@shared/*": ["shared/*"],
			"@fonts/*": ["fonts/*"],
			"@lotties/*": ["lotties/*"],
			"@mockdata/*": ["mockdata/*"],
			"@styles/*": ["styles/*"],
			"@public/*": ["public/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"exclude": ["node_modules", ".next", "out"]
}
